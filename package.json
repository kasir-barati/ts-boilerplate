{
    "name": "node-typescript-boilerplate",
    "version": "0.0.0",
    "description": "Node.js development in TypeScript",
    "devDependencies": {
        "@types/jest": "~27.0.2",
        "@types/node": "~16.11.6",
        "@typescript-eslint/eslint-plugin": "~5.7.0",
        "@typescript-eslint/parser": "~5.7.0",
        "eslint": "~8.4.1",
        "eslint-config-prettier": "~8.3.0",
        "eslint-plugin-jest": "~25.3.0",
        "jest": "~27.4.4",
        "prettier": "~2.5.1",
        "rimraf": "~3.0.2",
        "ts-jest": "~27.1.1",
        "ts-node": "^10.4.0",
        "tsutils": "~3.21.0",
        "typescript": "~4.5.3"
    },
    "scripts": {
        "start": "node dist/src/main.js",
        "start:dev": "nodemon",
        "clean": "rimraf coverage dist tmp",
        "prebuild": "npm run lint",
        "build": "tsc -p tsconfig.build.json",
        "build:watch": "tsc -w -p tsconfig.build.json",
        "lint": "eslint",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./__tests__/jest-e2e.json",
        "test:watch": "jest --watch",
        "format": "prettier --write '**/*.{ts,js,json,md}'",
        "watch": "tsc -w -p ./",
        "prepare": "husky install",
        "docker-up": "docker-compose -f dev.docker-compose.yml up",
        "docker-up:build": "docker-compose -f dev.docker-compose.yml up --build",
        "docker-down": "docker-compose -f dev.docker-compose.yml down --remove-orphans"
    },
    "author": "kasir-barati",
    "license": "Apache-2.0",
    "dependencies": {
        "husky": "^7.0.4",
        "nodemon": "^2.0.15",
        "tslib": "~2.3.1"
    },
    "types": "./dist/index.d.ts",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">= 16.13 <17"
    },
    "keywords": [
        "template",
        "boilerplate",
        "husky",
        "docker",
        "docker-compose",
        "jest",
        "eslint",
        "nodemon",
        "debug-in-vscode",
        "typescript",
        "nodejs"
    ]
}
