{
    "name": "ts-boilerplate",
    "version": "0.0.0",
    "license": "UNLICENSED",
    "description": "",
    "devDependencies": {
        "@jest/types": "^29.5.0",
        "@types/node": "~16.11.68",
        "rimraf": "~3.0.2",
        "ts-node": "^10.9.1",
        "tsutils": "~3.21.0",
        "@commitlint/cli": "^17.6.1",
        "@commitlint/config-conventional": "^17.6.1",
        "@types/jest": "^29.5.1",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "prettier": "^2.8.8",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "scripts": {
        "start": "node dist/src/main.js",
        "start:dev": "nodemon src/main.ts",
        "clean": "rimraf coverage dist tmp",
        "prebuild": "npm run lint",
        "build:watch": "tsc -w -p tsconfig.build.json",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./__tests__/jest-e2e.json",
        "test:watch": "jest --watch",
        "watch": "tsc -w -p ./",
        "prepare": "husky install",
        "lint": "pnpm run '/^lint:.*/'",
        "lint:ts": "npx eslint --ext '**/*.{ts,tsx}'",
        "format": "prettier -w . -u",
        "format:check": "prettier . -c",
        "build": "tsc -p tsconfig.build.json",
        "compose:up": "docker compose -f dev.docker-compose.yml up -d",
        "compose:logs": "docker compose -f dev.docker-compose.yml logs -f",
        "compose:down": "docker compose -f dev.docker-compose.yml down --volumes && pnpm run terraform:rm"
    },
    "author": "kasir-barati",
    "dependencies": {
        "husky": "^7.0.4",
        "nodemon": "^2.0.22",
        "pretty-quick": "^3.1.3",
        "tslib": "~2.3.1"
    },
    "types": "./dist/index.d.ts",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=18"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kasir-barati/ts-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/kasir-barati/ts-boilerplate/issues"
    },
    "homepage": "https://github.com/kasir-barati/ts-boilerplate#readme",
    "keywords": [
        "pnpm",
        "template",
        "boilerplate",
        "husky",
        "docker",
        "docker-compose",
        "jest",
        "eslint",
        "nodemon",
        "debug-in-vscode",
        "typescript",
        "nodejs"
    ]
}
