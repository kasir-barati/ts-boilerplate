{
    "verbose": true,
    "watch": ["."],
    "ext": "*.ts,*.js,*.json,*.yml",
    "env": {
        "NODE_ENV": "development"
    },
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "logs/",
        "pgdata"
    ],
    "exec": "node --inspect=0.0.0.0:5870 --require ts-node/register src/main.ts",
    "restartable": "rs",
    "legacyWatch": true
}
