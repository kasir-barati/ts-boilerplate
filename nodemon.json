{
    "verbose": true,
    "watch": ["src"],
    "ext": "ts,js,html,json,yml,css",
    "env": {
        "NODE_ENV": "development"
    },
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "logs/",
        "dist/",
        "pgdata"
    ],
    "exec": "npm run clean && npm run build && npm run lint && node --nolazy --harmony ./dist/main.js",
    "restartable": "rs",
    "execMap": {
        "js": "node --inspect=0.0.0.0:5870 --nolazy --harmony --harmony-top-level-await --abort-on-uncaught-exception --unhandled-rejections='strict'"
    }
}
