{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to the running Node inside docker container",
            "address": "127.0.0.1",
            "port": 5870,
            "restart": true,
            "timeout": 10000,
            "stopOnEntry": true,
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}/app/dist", // the root where everything is based on
            "localRoot": "${workspaceFolder}", // root of all server files
            "remoteRoot": "/app", // workspace path which was set in the dockerfile
            "outFiles": ["${workspaceFolder}/dist/src/**/*.js"], // all compiled JavaScript files
            "preLaunchTask": "tsc-watch",
            "sourceMaps": true,
            "protocol": "auto"
            // "protocol": "inspector"
        }
    ]
}
